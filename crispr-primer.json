{
  "min_packer_version": "1.0.0",
  "variables": {
    "aws_region": "us-west-2"
  },
  "builders": [
    {
      "ami_name": "czbiohub-crispr_primer",
      "ami_description": "For running crispr_primer python 3 script by Yun-fang. crispr_primer wraps primer3. AMI based off of czbiohub-miniconda.",
      "tags": {
        "Name": "czbiohub-crispr_primer"
      },
      "instance_type": "m4.xlarge",
      "region": "{{user `aws_region`}}",
      "type": "amazon-ebs",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "czbiohub-miniconda-*",
          "root-device-type": "ebs"
        },
        "owners": [
          423543210473
        ],
        "most_recent": true
      },
      "ssh_username": "ubuntu"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/sleep_until_dpkg.sh",
        "scripts/crispr-primer.sh"
      ],
      "pause_before": "10s"
    },
    {
      "type": "file",
      "source": "assets/crispr-primer",
      "destination": "~/"
    }
  ]
}