{
  "min_packer_version": "1.0.0",
  "variables": {
    "aws_region": "us-west-2"
  },
  "builders": [{
    "ami_name": "czbiohub-bionode-{{isotime \"2006-01-02\" | clean_ami_name}}",
      "ami_description": "An Ubuntu 16.04 AMI with Bionode",
      "tags": {
        "Name": "czbiohub-bionode"
      },
      "instance_type": "t2.micro",
      "region": "{{user `aws_region`}}",
      "type": "amazon-ebs",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "czbiohub-ubuntu16-*",
          "root-device-type": "ebs"
        },
        "owners": [423543210473],
        "most_recent": true
      },
      "ssh_username": "ubuntu"
    }],
  "provisioners": [{
    "type": "shell",
    "script": "scripts/sleep_until_dpkg.sh && scripts/bionode.sh",
    "pause_before": "30s",
    "expect_disconnect": true
  }]
}
