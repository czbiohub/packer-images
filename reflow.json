{
  "min_packer_version": "1.0.0",
  "variables": {
    "aws_region": "us-west-2"
  },
  "builders": [{
    "ami_name": "czbiohub-reflow-{{isotime \"2006-01-02\" | clean_ami_name}}",
    "ami_description": "An Ubuntu 16.04 AMI with Reflow and miniconda",
    "tags": {
      "Name": "czbiohub-reflow"
    },
    "instance_type": "m4.xlarge",
    "region": "{{user `aws_region`}}",
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "czbiohub-miniconda-*",
        "root-device-type": "ebs"
      },
      "owners": [423543210473],
      "most_recent": true
    },
    "ssh_username": "ubuntu"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "assets/reflow/etc/pam.d/common-session",
      "destination": "/tmp/common-session"
    },
    {
      "type": "file",
      "source": "assets/reflow/etc/pam.d/common-session-noninteractive",
      "destination": "/tmp/common-session-noninteractive"
    },
    {
      "type": "file",
      "source": "assets/reflow/etc/security/limits.conf",
      "destination": "/tmp/limits.conf"
    },
    {
      "type": "file",
      "source": "assets/reflow/etc/systemd/user.conf",
      "destination": "/tmp/user.conf"
    },
    {
      "type": "file",
      "source": "assets/reflow/etc/systemd/system.conf",
      "destination": "/tmp/system.conf"
    },
    {
      "type": "file",
      "source": "assets/reflow/reflow_profile.sh",
      "destination": "/tmp/reflow_profile.sh"
    },
    {
      "type": "file",
      "source": "assets/reflow/reflow_startup.sh",
      "destination": "/tmp/reflow_startup.sh"
    },
    {
      "type": "file",
      "source": "assets/reflow/.tmux.conf",
      "destination": "/home/ubuntu/.tmux.conf"
    },
    {
      "type": "file",
      "source": "assets/reflow/git-commit-reflow-batches.sh",
      "destination": "/home/ubuntu/git-commit-reflow-batches.sh"
    },
      {
      "type": "file",
      "source": "assets/reflow/.zshrc",
      "destination": "/tmp/.zshrc"
    },
    {
      "type": "file",
      "source": "assets/reflow/sync-reflow-aws-github.crontab",
      "destination": "/home/ubuntu/sync-reflow-aws-github.crontab"
    },
    {
      "type": "file",
      "source": "assets/reflow/.tmuxinator",
      "destination": "/home/ubuntu"
    },
    {
      "type": "shell",
      "script": "scripts/reflow.sh",
      "pause_before": "60s"
    }
]
}
