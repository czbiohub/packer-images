{
  "min_packer_version": "1.0.0",
  "variables": {
    "aws_region": "us-east-1",
    "user": "{{env `USER`}}"
  },
  "builders": [{
    "name": "ubuntu16-ami",
    "ami_name": "{{user `user`}}-velocyto-{{isotime | clean_ami_name}}",
    "ami_description": "An Ubuntu 16.04 AMI with velocyto, built on Anaconda 5.0.0 (Release Date: September 26, 2017)",
    "instance_type": "t2.micro",
    "region": "{{user `aws_region`}}",
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
      "virtualization-type": "hvm",
      "name": "{{user `user`}}-anaconda*",
      "root-device-type": "ebs"
      },
      "owners": ["423543210473"],
      "most_recent": true
    },
    "ssh_username": "ubuntu"
  }],
  "provisioners": [{
    "type": "shell",
    "inline_shebang": "/bin/bash -e",
    "execute_command": "{{ .Vars }} /bin/bash -vx {{ .Path }}",
    "inline": [
      "echo '--- sleep start ---' $(date)",
      "sleep 30",
      "echo '--- sleep end ---' $(date)",
      "sudo apt-get install -y gcc libgl",
      "tail ~/.bashrc",
      "tail ~/.bash_profile",
      "echo '$PATH:' $PATH --- $(date)",
      "echo 'source ~/.bashrc' && source ~/.bashrc",
      "echo '$PATH:' $PATH --- $(date)",
      "echo '$PATH:' $PATH --- $(date)",
      "echo 'source ~/.bash_profile' && source ~/.bash_profile",
      "echo '$PATH:' $PATH --- $(date)",
      "echo '$PATH:' $PATH --- $(date)",
      "echo 'export PATH=$HOME/anaconda/bin:$PATH' && export PATH=$HOME/anaconda/bin:$PATH",
      "echo '$PATH:' $PATH --- $(date)",
      "hash -r",
      "/home/ubuntu/anaconda/bin/conda info -a",
      "conda config --set always_yes yes --set changeps1 no",
      "conda update -q conda",
      "conda info -a",
      "conda install numpy scipy cython scikit-learn h5py click matplotlib numba cython",
      "pip install loompy pysam",
      "git clone https://github.com/velocyto-team/velocyto.py.git",
      "cd velocyto.py",
      "pip install .",
      "velocyto --help"
    ]
  }]
}
