{
  "min_packer_version": "1.0.0",
  "variables": {
    "aws_region": "us-west-2"
  },
  "builders": [{
    "ami_name": "czbiohub-pacbio-{{isotime \"2006-01-02\" | clean_ami_name}}",
    "ami_description": "PacBio SMRT Link 7",
    "tags": {
      "Name": "czbiohub-pacbio"
    },
    "iam_instance_profile": "S3fromEC2",
    "instance_type": "t2.micro",
    "region": "{{user `aws_region`}}",
    "type": "amazon-ebs",
    "ssh_username": "ubuntu",
    "source_ami": "ami-0da12486c5bf1b761",
    "ami_block_device_mappings": [
      {
	"device_name": "/dev/sda1",
	"volume_size": 16,
	"delete_on_termination": true
      },
      {
	"delete_on_termination": true,
	"device_name": "/dev/sde",
	"volume_size": 1000,
	"volume_type": "standard"
      }
    ],
    "launch_block_device_mappings": [
      {
	"device_name": "/dev/sda1",
	"volume_size": 16,
	"delete_on_termination": true
      },
      {
	"delete_on_termination": true,
	"device_name": "/dev/sde",
	"volume_size": 1000,
	"volume_type": "standard"
      }
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": ["scripts/format_xvde.sh",
		"scripts/pacbio.sh"],
    "pause_before": "60s"
  }]
}
