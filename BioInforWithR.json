
{
  "min_packer_version": "1.0.0",
  "variables": {
    "aws_region": "us-west-2",
    "user": "{{env `USER`}}"
  },
  "builders": [{
    "name": "ubuntu16-ami",
    "ami_name": "rtleenay-bioinfo-image-withR",
    "ami_description": "An Ubuntu 16.04 AMI with necessary software for deep sequencing analysis including R",
    "instance_type": "m4.large",
    "region": "{{user `aws_region`}}",
    "type": "amazon-ebs",
    "source_ami": "ami-2c03de54",
    "ssh_username": "ubuntu"}],
  "provisioners": [{
    "type": "shell",
    "scripts": ["scripts/sleep_until_dpkg.sh", 
                "scripts/bowtie.sh",
                "scripts/tophat.sh",
                "scripts/biopython.sh",
                "scripts/BWA.sh",
                "scripts/FastXtoolkit.sh",
                "scripts/GATK.sh",
                "scripts/MAGeCK.sh"],
    "expect_disconnect": true
    }]
}